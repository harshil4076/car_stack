
<div class="row pt-5">

    <div class="col-lg-4"> 
           
        <form id="add_car_make">
            
                <input id="input_make" type="text" class="" placeholder="car make" name="make"></input>
          
            <button class="btn btn-primary">Save make</button>
        </form>
        
    </div>
    <div class="col-lg-4"> 
        <form action="/addcarmodel" method="POST">
            <select class=" my-2" id="carmake" name="carmake">
               <% carmake.forEach((carmake)=>{ %>
                <option><%= carmake.make %></option>
                <% }) %>
              </select>
    
            
                <input type="text" class="" placeholder="car model" name="model"></input>
        
            
            <button class="btn btn-primary">Save</button>
    </form>
    </div>
    <div class="col-lg-4"> 
        <form id="displaymodel"> 
            <select class=" my-2" id="dcarmake" name="carmake">
               <% carmake.forEach((carmake)=>{ %>
                <option><%= carmake.make %></option>
               <% }) %>    
             </select>
       
        
        <button class="btn">Display</button>
    
        <div id="display" class="container">
        
        </div>
    </form>
    </div>

</div>






    
