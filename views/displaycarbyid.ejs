<% include partials/header %>
<div class="car_id_maindiv pt-5">
        <p class="car_id_make"><%=car.year%> <%=car.make%></p>
        <p class="car_id_model"><%=car.model%></p>
    <div class="row">
        <div class="col-lg-7">
            <div class="row">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                            <img class="d-block w-100 img-fluid" src="<%= car.image1%>" alt="First slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100 img-fluid" src="<%= car.image1%>" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                            <img class="d-block w-100 img-fluid" src="<%= car.image1%>" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                </div> 
            </div>
        </div>
        <div class="col-lg-5">
            <div class="row px-3 py-3 ">
                <div class="col-6 border-bottom">
                    <p class="car_id_trans"><%=car.transmission%></p>
                </div>
                <div class="col-6 border-bottom">
                        <i class="material-icons">speed</i> 
                    <p class="car_id_milage"><%=car.milage%></p>
                </div>
            </div>
            <div class="row px-3 py-3">
                    <div class="col-6">
                        <p class="mb-0 pt-2">Available At:</p>
                    </div>
                    <div class="col-6">
                        <p class="car_id_price"> $<%=car.price%></p>
                    </div>
            </div>
            <div class="row px-3 py-3">
                    <div class="col-6">
                        <a class=""><button class="get_your_price px-3 py-3">GET YOUR PRICE</button></a>
                    </div>
                    <div class="col-6">
                    </div>
            </div>
        </div>
            

    </div> 
</div>
<% include partials/footer %>